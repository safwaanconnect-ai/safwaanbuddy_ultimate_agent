# SafwaanBuddy Ultimate++ Environment Configuration
# Copy this file to .env and customize as needed

# Application Settings
DEBUG=false
APP_NAME=SafwaanBuddy Ultimate++

# Voice Settings
VOICE_ENABLED=true
VOICE_DEFAULT_LANGUAGE=en-US
VOICE_WAKE_WORD=hey safwan

# GUI Settings
GUI_THEME=dark
GUI_WIDTH=1200
GUI_HEIGHT=800

# Browser Settings
BROWSER_DEFAULT=chrome
BROWSER_HEADLESS=false

# Logging
LOGGING_LEVEL=INFO
LOGGING_DIR=logs

# Paths
PROFILES_DATA_DIR=data/profiles
PLUGINS_DIR=src/safwaanbuddy/plugins
TEMPLATES_DIR=data/templates
